<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/css/jass.css" />
  </head>

  <body>
    <header class="banner">
      <nav>
        {{#if isPostDetail}}
          <a href="./../">Home</a>
          <a href="./../dashboard">Dashboard</a>
          <a href="./../" id="logout">Logout</a>
        {{else}}
          <a href="./">Home</a>
          <a href="./dashboard">Dashboard</a>
          {{#if logged_in}}
            <a href="./" id="logout">Logout</a>
          {{else}}
            <a href="./login">Login</a>
          {{/if}}
        {{/if}}
      </nav>
      <h1 class="banner-title">
        {{#if isHomepage}}
          The Tech Blog
        {{else}}
          {{#if isDashboard}}
            My Dashboard -
            {{name}}
          {{else}}
            {{#if isNewPost}}
              My Dashboard -
              {{name}}
            {{else}}
              {{#if isPostDetail}}
                Post Details
              {{else}}
                {{#if isLogin}}
                  Tech Blog Login
                {{else}}
                  {{#if isNewUserSignup}}
                    Tech Blog Signup
                  {{/if}}
                {{/if}}
              {{/if}}
            {{/if}}
          {{/if}}
        {{/if}}
      </h1>
    </header>
    <main>

      {{{body}}}
    </main>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>